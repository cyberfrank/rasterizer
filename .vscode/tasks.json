{
    "version": "2.0.0",
    "options": {
        "shell": {
            "executable": "cmd.exe",
            "args": [
                "/d",
                "/c"
            ]
        }
    },
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "build debug",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "build",
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "build clean",
            "group": "build"
        }
    ]
}
